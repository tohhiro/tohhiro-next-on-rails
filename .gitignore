# ========================================
# Rails (blog-api)
# ========================================

# Ignore bundler config
blog-api/.bundle

# Ignore all logfiles and tempfiles
blog-api/log/*
blog-api/tmp/*
!blog-api/log/.keep
!blog-api/tmp/.keep

# Ignore pidfiles, but keep the directory
blog-api/tmp/pids/*
!blog-api/tmp/pids/
!blog-api/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases)
blog-api/storage/*
!blog-api/storage/.keep
blog-api/tmp/storage/*
!blog-api/tmp/storage/
!blog-api/tmp/storage/.keep

# Ignore key files for decrypting credentials
blog-api/config/*.key

